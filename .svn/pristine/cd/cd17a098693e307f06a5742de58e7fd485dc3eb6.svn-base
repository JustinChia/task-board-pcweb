<div id="login-form" class="modal fade">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header" style="padding: 5px 0 5px 10px;">
        <h4 class="modal-title">请登录</h4>
      </div>
      <div class="modal-body">
        <form name="myForm" ng-submit="signin()">
          <div class="form-group">
            <input type="text" class="form-control" ng-model="account" placeholder="用户名" required>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" ng-model="password" placeholder="密码" required>
          </div>
<!--          <div class="checkbox">
            <label>
              <input type="checkbox"> Remember me
            </label>
          </div>-->
          <button type="submit" class="btn btn-primary btn-block" ng-disabled="myForm.$invalid">登录</button>
        </form>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<div id="user-form" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">完善用户资料</h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal" name="myForm1">
          <div class="form-group">
            <label class="col-sm-2 control-label">工号</label>
            <div class="col-sm-10">
              <input type="number" class="form-control" ng-model="userData.worker_num" required>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">名字</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" ng-model="userData.name" required>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">邮箱</label>
            <div class="col-sm-10">
              <input type="email" class="form-control" ng-model="userData.email" required>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" ng-disabled="myForm1.$invalid" ng-click="save()">保存</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->